<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolTrack.Pages.RegistrarHerramientaPage"
             Title="Registrar Herramienta">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Nombre de la herramienta" x:Name="NombreEntry"/>
            <Entry Placeholder="Serial" x:Name="SerialEntry"/>
            <Entry Placeholder="Código" x:Name="CodigoEntry"/>
            <Entry Placeholder="Descripción" x:Name="DescripcionEntry"/>

            <Button Text="Agregar Herramienta" Clicked="OnAgregarHerramientaClicked"/>
            <Button Text="Volver" Clicked="OnVolverClicked" BackgroundColor="LightGray"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
